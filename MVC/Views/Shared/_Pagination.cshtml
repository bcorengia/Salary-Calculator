<nav>
    <ul class="pagination justify-content-center">
        @if (Model.HasPrevius)
        {
            <li class="page-item" onclick="changePage(@Model.Page - 1)"><a class="page-link" href="#">Previous</a></li>
        }
        else
        {
            <li class="page-item disabled"><a class="page-link" href="#">Previous</a></li>
        }

        @for (var pageNumber = 1; pageNumber <= Model.TotalPages; pageNumber++)
        {
            @if (Model.Page == pageNumber)
            {
                <li class="page-item active"><a class="page-link" href="#">@pageNumber</a></li>
            }
            else
            {
                <li class="page-item" onclick="changePage(@pageNumber)"><a class="page-link" href="#">@pageNumber</a></li>
            }
        }

        @if (Model.HasNext)
        {
            <li class="page-item" onclick="changePage(@Model.Page + 1)"><a class="page-link" href="#">Next</a></li>
        }
        else
        {
            <li class="page-item disabled"><a class="page-link" href="#">Next</a></li>
        }
    </ul>

    <div class="btn-group float-right" title="Select page size" id="page-size-selector" role="group">
        <button type="button" id="page-size-1" onclick="changePageSize(1)" class="@(Model.PageSize == 1 ? "active" : "") btn btn-secondary">1</button>
        <button type="button" id="page-size-10" onclick="changePageSize(10)" class="@(Model.PageSize == 10 ? "active" : "") btn btn-secondary">10</button>
        <button type="button" id="page-size-50" onclick="changePageSize(50)" class="@(Model.PageSize == 50 ? "active" : "") btn btn-secondary">50</button>
    </div>
</nav>